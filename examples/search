#!/usr/bin/env -S uvx --from git+https://github.com/varlabz/ask ask-cli -c ~/.config/ask/llm.yaml -c

agent:
  instructions: |
    You are an advanced AI search assistant with access to various tools and services.
    Provide accurate, helpful, and concise responses.
    Must follow instructions precisely.
    When using search, always return results in the specified JSON format.

    Output format is a list of
    - URL 
    - Title
    - Snippets
    - Date as day, month, year

  output_type: list[dict]

llm:
  model: openrouter:moonshotai/kimi-k2
  api_key: file:~/.config/ask/openrouter
  temperature: 0.0

mcp:
  search:
    command: ["uvx", "--from", "git+https://github.com/varlabz/searxng-mcp", "mcp-server"]

server:
  name: ai search assistant
